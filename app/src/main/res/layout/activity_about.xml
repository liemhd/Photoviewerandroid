<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context="duyliem.photoviewer.NavigationView.About">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#212121">

            <ImageView
                android:id="@+id/imvBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/ic_back_black_24dp"
                android:tint="#FFFFFF" />

            <TextView
                android:id="@+id/tvMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/imvBack"
                android:text="About"
                android:textColor="#FFFFFF" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2B2B2B">

            <ImageView
                android:id="@+id/imvCover"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="centerCrop" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imvAvt"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@+id/imvCover"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-25dp" />

            <TextView
                android:id="@+id/tvNameMe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imvAvt"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Bui Duy Liem"
                android:textColor="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameMe"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Student"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>
