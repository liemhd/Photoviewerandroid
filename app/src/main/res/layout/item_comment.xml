<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2B2B2B"
        android:padding="6dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imvUsers"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignTop="@id/root"
            android:layout_marginLeft="6dp"
            android:src="@mipmap/avt_users" />

        <RelativeLayout
            android:id="@+id/root"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@id/imvUsers"
            android:background="@drawable/bo_vien"
            android:padding="4dp"
            android:text="nice picture">

            <TextView
                android:id="@+id/tvNameUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duy Liem"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvCmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameUsers"
                android:text="Wooooooooow" />
        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>